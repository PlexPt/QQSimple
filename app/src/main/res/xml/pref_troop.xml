<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="标题栏">
        <SwitchPreference
            android:key="hideTotalNumber"
            android:title="隐藏总人数" />
        <SwitchPreference
            android:key="hideOnlineNumber"
            android:title="隐藏在线人数" />
